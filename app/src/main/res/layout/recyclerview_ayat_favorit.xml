<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cv_ayat_favorit"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_ayat_favorit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/bg_primary"
        android:paddingTop="10dp">

        <TextView
            android:id="@+id/tv_label_ayat_favorit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="@string/tv_label_ayat_favorit"
            style="@style/tv_regular"
            android:textSize="12sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/line_light"
            android:layout_marginStart="60dp"
            android:layout_marginBottom="10dp"/>

        <ImageView
            android:id="@+id/ic_hapus_ayat_favorit"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:src="@drawable/ic_close_green"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="30dp"
            app:layout_constraintTop_toTopOf="@id/tv_label_ayat_favorit"
            app:layout_constraintBottom_toBottomOf="@id/tv_label_ayat_favorit"
            android:contentDescription="@string/desc_ic_hapus_ayat_favorit" />

        <View
            android:id="@+id/line_light"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            style="@style/line_thin"
            app:layout_constraintTop_toBottomOf="@id/tv_label_ayat_favorit"
            android:layout_marginTop="10dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>